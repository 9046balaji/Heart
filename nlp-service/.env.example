# =============================================================================
# NLP Service Configuration
# =============================================================================

# Service configuration
SERVICE_PORT=8000
LOG_LEVEL=INFO
DEBUG=false

# Security
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here

# Database
DATABASE_URL=sqlite:///./nlp_service.db

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# LLM Providers
GEMINI_API_KEY=your-google-ai-key-here
OLLAMA_BASE_URL=http://localhost:11434

# Langfuse Observability
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key-here
LANGFUSE_SECRET_KEY=your-langfuse-secret-key-here
LANGFUSE_HOST=http://localhost:3000

# RAG Configuration
USE_RAG=true
RAG_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LlamaIndex Configuration
USE_LLAMA_INDEX=false

# Document Processing
USE_UNSTRUCTURED_FALLBACK=true
UNSTRUCTURED_TIMEOUT=30.0

# Model Versioning
MODEL_VERSION=v1.0.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# New AI Frameworks
NEW_AI_FRAMEWORKS_ENABLED=true
COMPLEXITY_THRESHOLD=0.8

# LangChain Gateway (optional)
USE_LANGCHAIN_GATEWAY=false

# ===================
# Service Configuration
# ===================
NLP_SERVICE_PORT=5001
NLP_SERVICE_HOST=0.0.0.0
SERVICE_VERSION=1.0.0

# ===================
# Database Configuration
# ===================
# SQLite example (development):
DATABASE_URL=sqlite:///./nlp_cache.db
# MySQL example (production):
# DATABASE_URL=mysql://user:password@localhost:3306/healthcare_chatbot
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_chatbot

# ===================
# Model Configuration
# ===================
SPACY_MODEL=en_core_web_sm
USE_GPU=false
USE_TRANSFORMER_MODELS=false
TRANSFORMER_MODEL_NAME=bert-base-uncased

# ===================
# NLP Thresholds
# ===================
INTENT_CONFIDENCE_THRESHOLD=0.5
ENTITY_CONFIDENCE_THRESHOLD=0.6

# ===================
# Sentiment Thresholds
# ===================
SENTIMENT_THRESHOLD_POSITIVE=0.6
SENTIMENT_THRESHOLD_NEGATIVE=-0.4
SENTIMENT_THRESHOLD_DISTRESSED=-0.7
SENTIMENT_THRESHOLD_URGENT=0.8

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FILE=nlp_service.log

# ===================
# CORS Configuration
# ===================
CORS_ORIGINS=http://localhost:5000,http://localhost:5173,http://localhost:5175

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_PER_MINUTE=100

# ===================
# Model Versioning
# ===================
DEFAULT_MODEL_VERSION=v1.0

# ===================
# ML Models
# ===================
USE_ML_RISK_MODELS=true
ML_RISK_MODEL_TYPE=random_forest

# ===================
# Google Calendar Integration (Optional)
# ===================
# Download credentials from Google Cloud Console
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_DIR=./tokens
GOOGLE_CALENDAR_MOCK_MODE=true

# ===================
# Email (SMTP) Configuration (Optional)
# ===================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=57
EMAIL_FROM=noreply@example.com
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD=your-app-password-here
EMAIL_MOCK_MODE=true

# ===================
# SMS (Twilio) Configuration (Optional)
# ===================
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
SMS_MOCK_MODE=true

# ===================
# Push Notifications (Firebase) Configuration (Optional)
# ===================
# Download service account JSON from Firebase Console
FIREBASE_CREDENTIALS_FILE=firebase-credentials.json
PUSH_MOCK_MODE=true

# ===================
# Scheduler
# ===================
SCHEDULER_DB_PATH=scheduler_jobs.db
SCHEDULER_MOCK_MODE=false

# ===================
# Cache (Redis) Configuration (Optional)
# ===================
CACHE_ENABLE_L2=false
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ===================
# AI Provider Configuration (Optional)
# ===================
# Google Gemini API
# GOOGLE_API_KEY=your-google-api-key-here

# OpenAI API
# OPENAI_API_KEY=your-openai-api-key-here

# JWT Authentication
# JWT_SECRET=your-jwt-secret-here

# OAuth2 (if using)
# OAUTH2_CLIENT_ID=your-client-id
# OAUTH2_CLIENT_SECRET=your-client-secret

# ===================
# Feature Flags (Added for P2 Fail-Fast Dependencies)
# ===================
ENABLE_RAG=true
ENABLE_SPACY=true
ENABLE_TORCH=false
GUARDRAILS_ENABLED=true
LLM_PROVIDER=gemini
OLLAMA_FALLBACK=true